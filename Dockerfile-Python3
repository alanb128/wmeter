FROM resin/rpi-raspbian:latest

ENTRYPOINT []

RUN apt-get -q update && \
        apt-get -qy install python3 \
        python3-pip python3-dev \
        gcc make

RUN pip3 install rpi.gpio && \
        pip3 install paho-mqtt && \
        pip3 install twilio && \
        pip3 install python-dateutil
